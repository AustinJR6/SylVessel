# Sylana Vessel Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# HuggingFace API Token
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514
EMOTION_MODEL=gpt-4o-mini
ENABLE_WEB_SEARCH=true
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here
GITHUB_TOKEN=your_github_pat_here
CODE_EXEC_GCS_BUCKET=your_artifacts_bucket_name
CODE_EXEC_PYTHON_IMAGE=python:3.11-slim
CODE_EXEC_NODE_IMAGE=node:20-alpine
CODE_EXEC_BASH_IMAGE=bash:5.2
CODE_EXEC_CPUS=1
CODE_EXEC_MEMORY=768m
RESEND_API_KEY=
OUTREACH_FROM_EMAIL=outreach@yourdomain.com
OUTREACH_FROM_NAME=Elias at Manifest
BACKEND_URL=https://your-backend-url
RESEND_WEBHOOK_SECRET=
CORS_ORIGINS=*

# Database Configuration (Supabase)
# Get from: Supabase Dashboard > Settings > Database > Connection string (URI)
SUPABASE_DB_URL=postgresql://postgres.[ref]:[password]@[host]:5432/postgres
DB_POOL_MIN=1
DB_POOL_MAX=8
ALLOWED_IDENTITIES=sylana,claude

# Model Configuration
MODEL_NAME=meta-llama/Llama-2-7b-chat-hf
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=384
MEMORY_ENCRYPTION_KEY=replace_with_random_32plus_char_secret

# Fine-Tuning Controls
ENABLE_FINE_TUNING=false
MIN_TRAINING_SAMPLES=100
CHECKPOINT_DIR=./data/checkpoints

# Generation Parameters
TEMPERATURE=0.9
TOP_P=0.9
MAX_NEW_TOKENS=150
MAX_CONTEXT_LENGTH=512

# Memory Configuration
MEMORY_CONTEXT_LIMIT=5
SEMANTIC_SEARCH_K=5
SIMILARITY_THRESHOLD=0.7
MEMORY_DECAY_HALF_LIFE_DAYS=14
CONTINUITY_LOOKBACK_DAYS=30
MAX_CONTINUITY_ITEMS=8

# Voice Configuration (Optional)
ENABLE_VOICE=true
TTS_RATE=160
TTS_VOLUME=1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/sylana.log

# RunPod / Cloud Configuration
RUNPOD_API_KEY=your_runpod_api_key_here
SERVER_PORT=7860
SERVER_HOST=0.0.0.0
